<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="Notification" table="notification">
        <id name="idNotification" type="int">
            <column name="idnotification" />
            <generator class="assigned" />
        </id>
        <many-to-one name="utilisateur" class="Utilisateur" fetch="select">
            <column name="idutilisateur" not-null="true" />
        </many-to-one>
        <property name="type" type="string">
            <column name="type" length="254" />
        </property>
        <property name="contenu" type="string">
            <column name="contenu" length="254" />
        </property>
        <property name="dateEnvoi" type="string">
            <column name="dateenvoi" length="254" />
        </property>
        <property name="estVisible" type="boolean">
            <column name="estvisible" />
        </property>
    </class>
</hibernate-mapping>