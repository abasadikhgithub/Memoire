<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.memoire.model">
    <class name="Utilisateur" table="utilisateur">
        <id name="idUtilisateur" type="int">
            <column name="idutilisateur" />
            <generator class="assigned" />
        </id>
        <property name="nomUtilisateur" type="string">
            <column name="nomutilisateur" length="254" />
        </property>
        <property name="motDePasse" type="string">
            <column name="motdepasse" length="254" not-null="false"/>
        </property>
        <property name="email" type="string">
            <column name="email" length="254" not-null="false"/>
        </property>
        <property name="telephone" type="string">
            <column name="telephone" length="254" />
        </property>
        <property name="adresse" type="string">
            <column name="adresse" length="254" not-null="false"/>
        </property>
        <property name="dateCreation" type="date">
            <column name="datecreation" />
        </property>
        <property name="derniereConnexion" type="date">
            <column name="derniereconnexion" not-null="false"/>
        </property>
        <property name="estActif" type="boolean">
            <column name="estactif" />
        </property>
        <union-subclass name="AgentEtat" table="AgentEtat">
            <property name="departement" column="departement" />
        </union-subclass>
        <union-subclass name="Contact" table="Contact">
            
        </union-subclass>
        <union-subclass name="Medecin" table="Medecin">
            <property name="numeroLicence" column="numeroLicence" />
            <many-to-one name="structureSanitaire" class="StructureSanitaire">
                <column name="idstructure" />
            </many-to-one>
        </union-subclass>
        <union-subclass name="Patient" table="Patient">
            <property name="dateNaissance" column="datenaissance" />
        </union-subclass>
    </class>
</hibernate-mapping>