<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="MessageChat" table="messagechat">
        <id name="idMessage" type="int">
            <column name="idmessage" />
            <generator class="assigned" />
        </id>
        <many-to-one name="medecin" class="Medecin" fetch="select">
            <column name="idutilisateur" not-null="true" />
        </many-to-one>
        <many-to-one name="patient" class="Patient" fetch="select">
            <column name="pat_idutilisateur" not-null="true" />
        </many-to-one>
        <property name="message" type="string">
            <column name="message" length="254" />
        </property>
        <property name="estLu" type="boolean">
            <column name="estlu" />
        </property>
    </class>
</hibernate-mapping>